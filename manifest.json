{
   "action": {
      "default_icon": {
         "128": "icons/icon128.png",
         "16": "icons/icon16.png",
         "48": "icons/icon48.png"
      },
      "default_popup": "popup.html"
   },
   "background": {
      "service_worker": "background.js"
   },
   "content_scripts": [ {
      "js": [
         "modules/dataParser.js",
         "modules/dataFilter.js",
         "modules/exportUtils.js",
         "modules/uiComponents.js",
         "modules/chartRenderer.js",
         "modules/eventHandlers.js",
         "modules/pivotRenderer.js",
         "modules/computerPage.js",
         "content.js"
      ],
      "matches": [ "https://fogplay.mts.ru/merchant/*" ],
      "run_at": "document_start"
   } ],
   "description": "Аналитика и Мониторинг статуса компьютеров MTS FogPlay",
   "host_permissions": [ "https://fogplay.mts.ru/*" ],
   "icons": {
      "128": "icons/icon128.png",
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
   },
   "manifest_version": 3,
   "name": "FogPlay Monitor Plus (бета)",
   "permissions": [ "storage", "unlimitedStorage", "notifications", "alarms" ],
   "version": "0.0.11",
   "web_accessible_resources": [ {
      "matches": [ "https://fogplay.mts.ru/*" ],
      "resources": [ "icons/*" ]
   } ]
}
